@charset "UTF-8";

.mod_title {
	padding-top: 100px;
}

.item_mod {
	margin: 0 auto;
}

.mod_table {
	text-align: center;
	margin: 0 auto;
	border-collapse: collapse;
	height: 200px;
}

tr,
td {
	border: 1px solid black;
	width: 300px;
}

.item {
	background-color: lightgray;
	width: 100px;
	font-weight: bold;
	font-size: 18px;
}

.item_id {
	font-weight: bold;
}

.text {
	width: 250px;
}

.mod_button {
	width: 70px;
	margin: 10px auto;
}

.item_mod_button {
	width: 70px;
	margin: 10px auto;
}