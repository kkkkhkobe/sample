@charset "UTF-8";

.regi_ti {
	margin-left: 50px;
}

.error_message {
	border: 1px solid red;
	background-color: lightpink;
	width: 450px;
	font-size: 22px;
	font-weight: bold;
	margin: 10px auto;
	text-align: center;
}

.register_table {
	margin: 0 auto;
	height: 200px;
}

.register_table,
tr,
td {
	border: 1px solid black;
	border-collapse: collapse;
	text-align: center;
	width: 350px;
}

.cell {
	background-color: lightgray;
	font-weight: bold;
	width: 150px;
}

.text {
	width: 200px;
}

.register_button {
	margin: 10px auto;
	width: 70px;
}

.button {
	margin: 10px auto;
	width: 70px;
}